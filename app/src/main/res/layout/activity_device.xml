<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <!-- Nom de l'appareil -->
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de l'appareil"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <!-- Statut de connexion -->
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statut de connexion..."
        android:textSize="16sp"
        android:textStyle="italic"
        android:paddingBottom="20dp"/>

    <!-- Contrôle des LEDs -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrôle des LEDs"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/led1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 1"/>

        <Button
            android:id="@+id/led2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 2"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/led3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 3"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <!-- Notifications des boutons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="État des boutons STM32"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/button1Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bouton principal : Inactif"
        android:textSize="16sp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/button3Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Troisième bouton : Inactif"
        android:textSize="16sp"
        android:paddingTop="10dp"/>
</LinearLayout>
